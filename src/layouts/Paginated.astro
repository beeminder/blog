---
import Layout from "./Layout.astro";
import Pagination from "../components/Pagination.astro";

export interface Props {
  title: string;
  description?: string | undefined;
  image?: string | undefined;
  previous?:
    | {
        title: string;
        url: string;
      }
    | undefined;
  next?:
    | {
        title: string;
        url: string;
      }
    | undefined;
}

const { previous, next, ...rest } = Astro.props;
---

<Layout {...rest}>
    <Pagination slot="before-content" previous={previous} next={next} />
    <slot />
    <Pagination slot="after-content" previous={previous} next={next} />
</Layout>