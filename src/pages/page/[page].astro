---
import type { GetStaticPaths, Page } from "astro";
import getPosts from "../../lib/getPosts";
import Posts from "../../components/Posts.astro";
import type { Post } from "../../schemas/post";
import Paginated from "../../layouts/Paginated.astro";
// import hotkeys from '../../lib/hotkeys.ts';

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const posts = await getPosts({
    sort: true
  });

  return paginate(posts, {
    pageSize: 10,
  });
};

interface Props {
  page: Page<Post>;
}

const { page } = Astro.props;

const older = page.url.next
  ? {
      url: page.url.next,
      title: "Older Entries",
    }
  : undefined;

const newer = page.url.prev
  ? {
      url: page.currentPage === 2 ? "/" : page.url.prev,
      title: "Newer Entries",
    }
  : undefined;

---

<Paginated title={`Page ${page.currentPage}`} previous={older} next={newer}>
  <Posts posts={page.data} />
</Paginated>