---
import Shadowbox from "../../components/Shadowbox.astro";
import Layout from "../../layouts/Layout.astro";
import getTags from "../../lib/getTags";

const rawTags = await getTags();
const tags = Object.values(rawTags);

tags.sort((a, b) => {
  return b.count - a.count;
});
---

<Layout title="Tags">
  <Shadowbox>
    <h1>Tags</h1>
    <ul>
      {
        tags.map((t) => (
          <li>
            <a href={`/tags/${t.name}`}>
              {t.name} ({t.count})
            </a>
          </li>
        ))
      }
    </ul>
  </Shadowbox>
</Layout>
