---
import type { Post } from "../lib/makePost";
import PostMeta from "./PostMeta.astro";
import Shadowbox from "./Shadowbox.astro";
import Typography from "./Typography.astro";

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<ul class="posts">
  {
    posts.map((p) => (
      <li>
        <Shadowbox>
          <Typography small sans>
            {p.image && (
              <a class="thumbnail" href={`/${p.slug}`}>
                <img
                  src={p.image.src}
                  alt={p.image.alt}
                  title={p.image.alt}
                  width="200"
                  height="200"
                />
              </a>
            )}
            <PostMeta post={p} />
          </Typography>
        </Shadowbox>
      </li>
    ))
  }
</ul>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .posts :global(.typography) {
    position: relative;
    padding-left: calc(200px + var(--gap-1));
  }

  .thumbnail {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 200px;
  }

  img {
    margin-right: var(--gap-1);
    object-fit: cover;
    min-height: 0;
    height: 100%;
  }
</style>
