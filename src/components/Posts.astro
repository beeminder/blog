---
import type { Post } from "../lib/makePost";
import PostMeta from "./PostMeta.astro";
import Shadowbox from "./Shadowbox.astro";

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<ul class="posts">
  {
    posts.map((p) => (
      <li>
        <Shadowbox>
          <div class="content">
            {p.image && (
              <a class="thumbnail" href={`/${p.slug}`}>
                <img
                  src={p.image.src}
                  alt={p.image.alt}
                  title={p.image.alt}
                  width="200"
                  height="200"
                />
              </a>
            )}
            <PostMeta post={p} />
          </div>
        </Shadowbox>
      </li>
    ))
  }
</ul>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .content {
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
  }

  .thumbnail {
    flex-shrink: 0;
  }

  img {
    margin-right: var(--gap-1);
    object-fit: cover;
    min-height: 0;
    height: 100%;
  }
</style>
