---
interface Props {
  sans?: boolean;
  small?: boolean;
  class?: string;
}

const { sans = false, small = false, class: className } = Astro.props;
---

<div class="typography" class:list={[{ sans, small }, className]}>
  <slot />
</div>

<style>
  .typography {
    container-type: inline-size;
    font-size: 0.9rem;
  }

  .sans {
    --font-family: sans-serif;
  }

  @container (min-width: 500px) {
    .typography :global(p), .typography :global(li) {
      text-align: justify;
      font-size: 1.1rem;
    }
    .small :global(p), .small :global(li) {
      font-size: 0.9rem;
    }
  }
</style>
