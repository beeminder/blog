---
import getYears from "../lib/getYears";
import Shadowbox from "./Shadowbox.astro";
import Typography from "./Typography.astro";

const years = await getYears();
---

<Shadowbox>
  <Typography sans>
    <h3>Archives</h3>
    <ul>
      {
        years.map((y) => (
          <li>
            <a href={`/${y.label}`}>
              {y.label} ({y.post_count})
            </a>
          </li>
        ))
      }
    </ul>
  </Typography>
</Shadowbox>

<style>
  h3 {
    margin-top: 0;
  }

  ul {
    margin-bottom: 0;
  }
</style>
